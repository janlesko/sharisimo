<div class="container">
  <h1>Devices:</h1>
  <div class="row">

   <% @devices.each do |device| %>

   <div class="col-xs-12 col-sm-6 col-md-3">
     <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= device.photo_url %>);">
