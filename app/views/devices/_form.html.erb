<%= simple_form_for(@device) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :category %>
  <%= f.input :photo_url %>
  <%= f.input :description %>
  <%= f.input :price %>
</div>

<div class = "form-submit">
  <%= f.button :submit %>
</div>
<% end %>

